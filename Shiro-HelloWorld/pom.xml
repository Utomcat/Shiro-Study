        <version>1.0.0-SNAPSHOT</version>
        <artifactId>shiro-parent</artifactId>
    </parent>
    <artifactId>shiro-hello-world</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>shiro-hello-world</name>

    <properties>
